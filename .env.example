# Database Configuration
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=your_secure_password_here
DB_HOST=mysql:3306

# MySQL Root Password (for local development)
MYSQL_ROOT_PASSWORD=rootpassword

# WordPress URLs
# For Railway, use: https://your-app-name.up.railway.app
WP_HOME=http://localhost:8080
WP_SITEURL=http://localhost:8080

# Environment
WP_ENVIRONMENT_TYPE=production

# Debug Settings (set to false in production)
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# Cron Settings
DISABLE_WP_CRON=false

# WordPress Security Keys
# Generate new keys at: https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY=your_unique_auth_key
SECURE_AUTH_KEY=your_unique_secure_auth_key
LOGGED_IN_KEY=your_unique_logged_in_key
NONCE_KEY=your_unique_nonce_key
AUTH_SALT=your_unique_auth_salt
SECURE_AUTH_SALT=your_unique_secure_auth_salt
LOGGED_IN_SALT=your_unique_logged_in_salt
NONCE_SALT=your_unique_nonce_salt
WP_CACHE_KEY_SALT=your_unique_cache_key_salt
