{
  "name": "aiddata-lms",
  "version": "2.0.0",
  "description": "AidData LMS Tutorial Builder - Comprehensive Learning Management System for WordPress",
  "author": "AidData <info@aiddata.org>",
  "license": "GPL-2.0-or-later",
  "homepage": "https://aiddata.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiddata/aiddata-lms.git"
  },
  "bugs": {
    "url": "https://github.com/aiddata/aiddata-lms/issues"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "lms",
    "learning",
    "tutorials",
    "education"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "webpack --mode production",
    "build:css": "sass assets/css/scss:assets/css --style compressed",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "webpack --mode development --watch",
    "watch:css": "sass assets/css/scss:assets/css --watch",
    "dev": "npm run watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "format": "prettier --write \"assets/**/*.{js,css,scss,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/js/**/*.test.js"
    ]
  }
}

