# EditorConfig configuration for AidData LMS
# http://editorconfig.org

# This is the top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 4
max_line_length = 100

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
max_line_length = 100

# TypeScript files
[*.{ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# CSS and SCSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package files
[{package.json,composer.json}]
indent_style = space
indent_size = 2

