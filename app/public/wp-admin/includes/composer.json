{
  "name": "aiddata/aiddata-lms",
  "description": "Comprehensive Learning Management System for WordPress with tutorial builder, video tracking, quizzes, and certificates",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "version": "2.0.0",
  "authors": [
    {
      "name": "AidData",
      "email": "info@aiddata.org",
      "homepage": "https://aiddata.org"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin",
    "lms",
    "learning-management-system",
    "tutorials",
    "education"
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/extension-installer": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "AidData_LMS\\": "includes/"
    },
    "classmap": [
      "includes/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AidData_LMS\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  },
  "scripts": {
    "lint": [
      "@phpcs"
    ],
    "phpcs": "phpcs --standard=WordPress includes/ aiddata-lms.php",
    "phpcbf": "phpcbf --standard=WordPress includes/ aiddata-lms.php",
    "phpstan": "phpstan analyse --memory-limit=2G",
    "test": [
      "@phpunit"
    ],
    "phpunit": "phpunit --testdox",
    "coverage": "phpunit --coverage-html coverage",
    "validate": [
      "@composer validate --strict",
      "@lint",
      "@phpstan",
      "@test"
    ],
    "format": [
      "@phpcbf"
    ]
  },
  "scripts-descriptions": {
    "lint": "Run all linting tools",
    "phpcs": "Check code against WordPress coding standards",
    "phpcbf": "Automatically fix coding standard violations",
    "phpstan": "Run static analysis",
    "test": "Run all tests",
    "phpunit": "Run PHPUnit tests",
    "coverage": "Generate code coverage report",
    "validate": "Run all validation checks",
    "format": "Format code to match coding standards"
  },
  "support": {
    "issues": "https://github.com/aiddata/aiddata-lms/issues",
    "source": "https://github.com/aiddata/aiddata-lms"
  }
}

